<div class="inventory-header">
  <h1>Custom Vehicles</h1>
  <p>Discover our unique custom vehicle collection</p>
</div>

<div class="vehicle-grid">
  <% vehicles.forEach(vehicle => { %>
    <div class="vehicle-card">
      <div class="vehicle-image">
        <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
      </div>
      <div class="vehicle-info">
        <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
        <div class="vehicle-price">$<%= vehicle.inv_price.toLocaleString() %></div>
        <p class="vehicle-description"><%= vehicle.inv_description %></p>
        <a href="/inv/detail/<%= vehicle.inv_id %>" class="view-details-btn">View Details</a>
      </div>
    </div>
  <% }); %>
</div>